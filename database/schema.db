CREATE TABLE IF NOT EXISTS "Families" (
	"FamilyID"	INTEGER,
	"FamilyName"	TEXT NOT NULL UNIQUE,
	"FamilyPassword"	TEXT NOT NULL,
	PRIMARY KEY("FamilyID")
);
CREATE TABLE IF NOT EXISTS "ProfilePictures" (
	"PictureID"	INTEGER NOT NULL,
	"ProfilePictureLink"	TEXT NOT NULL,
	PRIMARY KEY("PictureID" AUTOINCREMENT)
);
CREATE TABLE IF NOT EXISTS "Users" (
	"UserID"	INTEGER NOT NULL,
	"Username"	TEXT NOT NULL,
	"Email"	TEXT NOT NULL UNIQUE,
	"Password"	TEXT NOT NULL,
	"IsParent"	BOOLEAN NOT NULL,
	"FamilyID"	INTEGER NOT NULL,
	"ProfilePictureID"	INTEGER,
	PRIMARY KEY("UserID"),
	FOREIGN KEY("FamilyID") REFERENCES "Families"("FamilyID"),
	FOREIGN KEY("ProfilePictureID") REFERENCES "ProfilePictures"("PictureID")
);
CREATE TABLE IF NOT EXISTS "Chores" (
	"ChoreID"	INTEGER NOT NULL,
	"ChoreName"	TEXT NOT NULL,
	"Description"	TEXT,
	"AssignedUserID"	INTEGER,
	"AssignedFamilyID"	INTEGER,
	"Done"	INTEGER,
	"Points"	INTEGER,
	"Date"	TEXT,
	PRIMARY KEY("ChoreID" AUTOINCREMENT),
	FOREIGN KEY("AssignedFamilyID") REFERENCES "Families"("FamilyID"),
	FOREIGN KEY("AssignedUserID") REFERENCES "Users"("UserID")
);
